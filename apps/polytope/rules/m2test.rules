sub m2_matrix{
   my($name, $A) = @_;
   my $result = $name." = ";
   if(($A->rows() == 0) || ($A->cols() == 0)){
      $result .= "map(QQ^".$A->rows().", QQ^".$A->cols().", 0);\n";
      return $result;
   }
   $result .= "matrix {{";
   my @rows = map(join(",",@$_), @$A);
   $result .= join("},{", @rows);
   $result .= "}};\n";
   return $result;
}

